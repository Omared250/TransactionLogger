server {
  listen 80;
  root /usr/share/nginx/html;
  index index.html index.htm;

  # This block handles the React app routing
  # It ensures that all non-api routes load your index.html
  # This is what makes React Router work.
  location / {
    try_files $uri $uri/ /index.html;
  }

  # This block handles all API calls
  # Any request starting with /api will be forwarded to our backend
  location /api {
    # 'backend-service' is the name of our Kubernetes service.
    # K8s DNS will find it and route traffic to the backend pod
    # which is running on port 5000 (from your backend/index.js code).
    proxy_pass http://backend-service:4000;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection 'upgrade';
    proxy_set_header Host $host;
    proxy_cache_bypass $http_upgrade;
  }
}